<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="195dp"
        android:layout_height="169dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerInParent="true"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:text="PENERIMAAN SISWA BARU"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="319dp"
        android:layout_below="@id/image"
        android:layout_centerInParent="true"
        android:layout_marginTop="48dp"
        android:src="@drawable/kotakregister2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:text="REGISTER"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="67dp"/>




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:src="@drawable/bulat" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bulatabu"
        android:layout_below="@id/image"
        android:layout_centerInParent="true"
        android:layout_marginTop="347dp"/>

    <ImageView
        android:id="@+id/buttonNext"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerInParent="true"
        android:layout_marginTop="344dp"
        android:src="@drawable/baseline_navigate_next_24"></ImageView>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="116dp"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_height="57dp"
            android:background="@drawable/button"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/abu"
            android:id="@+id/inputNama"
            android:hint="NAMA LENGKAP" />

        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_height="57dp"
            android:background="@drawable/button"
            android:layout_marginTop="15dp"
            android:hint="EMAIL"
            android:textColor="@color/black"
            android:textColorHint="@color/abu"
            android:id="@+id/inputEmail"
            android:paddingLeft="15dp"/>



        />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="255dp"
        android:orientation="vertical"
        android:textColorHint="@color/abu"
        app:passwordToggleEnabled="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_height="57dp"
            android:background="@drawable/button"
            android:textColor="@color/black"
            android:textColorHint="@color/abu"
            android:id="@+id/inputPassword"
            android:paddingLeft="15dp"
            android:hint="PASSWORD"
            />

    </com.google.android.material.textfield.TextInputLayout>










</RelativeLayout>